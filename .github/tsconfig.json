{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node", "mocha", "sinon"],
    "paths": {
      "zanobijs-common": ["./packages/common/src"],
      "zanobijs-common/*": ["./packages/common/src/*"],
      "zanobijs-core": ["./packages/core/src"],
      "zanobijs-core/*": ["./packages/core/src/*"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}

