{
  "all": true,
  "include": ["src/**/*.ts"],
  "exclude": [
    "coverage*",
    "__test__/**/*.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e.ts",
    "node_modules"
  ],
  "per-file": true,
  "cache": false,
  "check-coverage": true,
  "lines": 90,
  "functions": 90,
  "branches": 90,
  "statements": 90,
  "reporter": ["lcov", "html", "text-summary"],
  "extension": [".ts"],
  "require": ["ts-node/register"]
}
