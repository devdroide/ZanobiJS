{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.1.0-beta.0",
  "npmClient": "npm",
  "command": {
    "version": {
      "exact": true,
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "message": ":bookmark: chore(release): publish %s",
      "private": false,
      "allowBranch": ["develop", "beta", "main"],
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.js",
        "**/*.spec.js",
        "**/__tests__/**",
        "**/__mocks__/**",
        ".github/**",
        ".lang/**",
        "gulp/**",
        ".*",
        "eslint.config.js",
        "gulpfile.mjs",
        "CONTRIBUTING.md",
        "README.md",
        "sonar-project.properties",
        "tsconfig.json",
        "tsconfig.test.json"
      ]
    },
    "publish": {
      "conventionalCommits": true,
      "message": ":bookmark: chore(release): publish %s"
    }
  },
  "packages": ["packages/*"]
}
