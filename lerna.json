{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.1.0-beta.43",
  "npmClient": "npm",
  "command": {
    "version": {
      "exact": true,
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "message": ":bookmark: chore(release): publish v%s",
      "private": false,
      "push": false,
      "gitTagVersion": false,
      "allowBranch": [
        "develop",
        "beta",
        "main"
      ],
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.js",
        "**/*.spec.js",
        "**/__tests__/**",
        "**/__mocks__/**"
      ]
    },
    "publish": {
      "conventionalCommits": true,
      "message": ":bookmark: chore(release): publish v%s"
    }
  },
  "packages": [
    "packages/*"
  ]
}